@using Business.Model
@model PessoaViewModel
@{
    ViewData["Title"] = "Adicionar uma Pessoa";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="CriarPessoa" asp-controller="Pessoas" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" id="nome" aria-describedby="emailHelp" placeholder="Digitar nome">
        <small id="emailHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input asp-for="CPF" type="text" class="form-control" id="cpf" placeholder="Digitar CPF">
    </div>
    <div class="form-group">
        <label for="DataNascimento">Data de Nascimento</label>
        <input asp-for="DataNascimento" type="datetime" class="form-control" id="DataNascimento" placeholder="Coloque sua Data">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>